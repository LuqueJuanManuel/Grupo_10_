<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head" , {title: 'Editando: ' + name }) %>

<title>Admin - editar producto:<%= name %></title>
<body>
    <!-- header -->
    <%- include("../partials/header") %> 
    <!-- fin del header -->

    <main id="register">
        <div class="registro-container">
            <form action="/admin/edit/<%= id  %>?_method=PUT" method="POST" enctype="multipart/form-data" novalidate>
                
                <div class="registro-form">
    
                    <h4>Editar producto <%= name %></h4>
                    <!-- nombre del producto -->
                    <div class="input-container">
                        <h6  class="datos-box">Nombre del producto:</h6>
                        <input class="input-style <%= locals.errors && errors.name ? 'is-invalid' : null%> " type="text" name="name" id="name" placeholder="ingresa un nombre..." value="<%= locals.old && old.name ? old.name : name %>">
                      <small class="text-danger ms-2"><%= locals.errors && errors.name ? errors.name.msg : null%></small>
                    </div>

                      <div class="input-container">
                        <h6 class="datos-box">Marca del producto:</h6>
                        <input class="input-style  <%= (locals.errors && errors.brand) && 'is-invalid'%>" type="text" name="brand" id="brand" placeholder="Ingresar la marca..." value="<%= locals.old && old.brand ? old.brand : brand %>">
                        <small class="text-danger ms-2"><%= locals.errors && errors.brand ? errors.brand.msg : null%></small>
                    </div>
    
                    <!-- agregar categoria -->
                    <div class="input-container">
                        <h6 class="datos-box">Categoria:</h6>
                        <select name="category" id="category" class="input-select <%= (locals.errors && errors.category) && 'is-invalid'%>" required>
                            <option value="" hidden selected>Elija su categoria</option>
                            <option value="Notebooks">Notebooks</option>
                            <option value="Computadores">Computadores</option>
                            <option value="Componentes-de-PC">Componentes de PC</option>
                            <option value="Monitores">Monitores</option>
                            <option value="Consolas">Consolas</option>
                        </select>
                        <small class="text-danger ms-2"><%= locals.errors && errors.category ? errors.category.msg : null%></small>
                    </div>
                    <!-- agregar sub categoria -->
                    <div class="input-container">
                        <h6 class="datos-box">Sub-categoria:</h6>
                        <input class="input-style" type="text" name="lastname" placeholder="Ingresar Sub-categoria" value="<%= lastname %>">
                    </div>
                    <!-- price -->
                    <!-- descount -->
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box ">Precio:$</h6>
                            <input class="input-style  <%= (locals.errors && errors.price) && 'is-invalid'%> " type="text" name="price" id="price" placeholder="Precio" value="<%= locals.old && old.price ? old.price : price %>">
                            <small class="text-danger ms-2"><%= locals.errors && errors.price ? errors.price.msg : null%></small>
                        </div>
                        <div class="input-container container-descount-A">
                            <h6 class="datos-box">Descuento:<%= discount %>%OFF</h6>
                            <input class="input-style  <%= (locals.errors && errors.discount) && 'is-invalid'%> " type="text" name="discount" id="discount" placeholder="Descuento" value="<%= locals.old && old.discount ? old.discount : discount %>">
                            <small class="text-danger ms-2"><%= locals.errors && errors.discount? errors.discount.msg : null%></small>
                        </div>
                    </div>
                    <div class="contaner-price-descount container-price-b">
                        <div class="input-container ">
                            <h6 class="datos-box ">Stock:</h6>
                            <input class="input-style  <%= (locals.errors && errors.stock) && 'is-invalid'%> " type="text" name="stock" id="stock" placeholder="Stock" value="<%= locals.old && old.stock? old.stock : stock %>">
                            <small class="text-danger ms-2"><%= locals.errors && errors.stock ? errors.stock.msg : null%></small>
                        </div>
                    </div>
    
                    <!-- ESPECIFICACION TECNICA -->
                    <h6 class="datos-box title-tecnicalEspecific">Especificaciones tecnicas</h6>
                    <!-- description general -->
                    <div class="input-container <%= (locals.errors && errors.description) && 'is-invalid'%>">
                        <h6 class="datos-box">Descripción:</h6>
                        <textarea name="description" id="description"  placeholder="Descripción del producto..."><%= locals.old && old.description ? old.description : description %></textarea>
                        <small class="text-danger ms-2"><%= locals.errors && errors.description? errors.description.msg : null%></small>
                    </div>
    
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">CPU:</h6>
                            <input class="input-style" type="text" name="cpu" id="cpu" placeholder="CPU" value="<%= cpu %>">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Placa/Grafica:</h6>
                            <input class="input-style" type="text" name="graficCard" id="graficCard" placeholder="Placa Grafica" value="<%= graficCard %>">
                        </div>
                    </div>
                    <div class="input-container">
                        <h6 class="datos-box">Sistemas operativos:</h6>
                        <select name="so" id="so" class="input-select" >
                            <option value="" hidden selected>Elija los SO:<%= so %></option>
                            <option value="Windows">Windows</option>
                            <option value="Linux">Linux</option>
                            <option value="MacOS">MacOS</option>
                            <option value="Ubuntu">Ubuntu Linux</option>
                        </select>
                    </div>
                    <!-- memoria/almacenamiento -->
                    <h6 class="datos-box title-tecnicalEspecific">Memorias</h6>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">RAM/tipo:</h6>
                            <input class="input-style" type="text" name="ram" id="ram" placeholder="RAM" value="<%= ram %>">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Capacidad/tipo:</h6>
                            <input class="input-style" type="text" name="capacity" id="capacity" placeholder="Capacidad/tipo" value="<%= capacity %>">
                        </div>
                    </div>
    
                    <!-- conectivilidad -->
                    <h6 class="datos-box title-tecnicalEspecific">Conectivilidad</h6>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">Puertos:</h6>
                            <input class="input-style" type="text" name="ports" id="ports" placeholder="Puertos" value="<%= puertos %>">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Puertos HDMI:</h6>
                            <input class="input-style" type="text" name="hdmi" id="hdmi" placeholder="Puertos HDMI" value="<%= hdmi %>">
                        </div>
                    </div>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">Puertos Ethernet:</h6>
                            <input class="input-style" type="text" name="ethernet" id="ethernet" placeholder="Puertos Ethernet" value="<%= ethernet %>">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Puertos USB:</h6>
                            <input class="input-style" type="text" name="usb" id="usb" placeholder="Puertos USB" value="<%= usb %>">
                        </div>
                    </div>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">WIFI:</h6>
                            <input class="input-style" type="text" name="wifi" id="wifi" placeholder="WIFI" value="<%= wifi %>">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">WebCam:</h6>
                            <input class="input-style" type="text" name="webCam" id="webCam" placeholder="WebCam" value="<%= webCam  %>">
                        </div>
                    </div>
                    <div class="contaner-price-descount container-price-b">
                        <div class="input-container ">
                            <h6 class="datos-box ">Bluetooth:</h6>
                            <input class="input-style" type="text" name="bluetooth" id="bluetooth" placeholder="Bluetooth" value="<%= bluetooth %>">
                        </div>
                    </div>
                    <!-- pantalla -->
                    <h6 class="datos-box title-tecnicalEspecific">Pantalla</h6>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">Tamaño:</h6>
                            <input class="input-style" type="text" name="screenSize" id="screenSize" placeholder="Tamaño" value="<%= screenSize %>">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Tipo display:</h6>
                            <input class="input-style" type="text" name="display" id="display" placeholder="Tipo-display" value="<%= display %>">
                        </div>
                    </div>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">resolucion:</h6>
                            <input class="input-style" type="text" name="resolution" id="resolution" placeholder="resolucion" value="<%= resolution %>">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Conección:</h6>
                            <input class="input-style" type="text" name="Conection" id="Conection" placeholder="Conección" value="<%= Conection %>">
                        </div>
                    </div>
                    <!-- dimenciones -->
                    <h6 class="datos-box title-tecnicalEspecific">Dimenciones</h6>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">Peso:</h6>
                            <input class="input-style" type="text" name="weight" placeholder="resolucion" value="<%= weight %>">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Alto:</h6>
                            <input class="input-style" type="text" name="high" id="high" placeholder="Alto"value="<%= high %>">
                        </div>
                    </div>
                    <div class="contaner-price-descount">
                        <div class="input-container container-price-A">
                            <h6 class="datos-box cpu">Ancho:</h6>
                            <input class="input-style" type="text" name="width" id="width" placeholder="Ancho" value="<%= width %>">
                        </div>
                        <div class="input-container container-descount-A">
                            <h6  class="datos-box cpu">Profundidad:</h6>
                            <input class="input-style" type="text" name="depth" id="depth" placeholder="Profundidad" value="<%= depth %>">
                        </div>
                    </div>
    
                    <!-- agregar image -->
                    <div class="input-container input-file">
                        <h6 class="datos-box">Imagenes del producto:</h6>
                        <input class="input-style-file"  type="file" value="<%= image %>"  name="image" id="image" multiple>
                         <label for="image" class="form-label-arch-edit">Archivos a modificar: <%= image %></label>
                    </div>
    
                    <!-- boton de enviar -->
                    <button class="button-container" type="submit"><a class="register" >Guardar cambios</a></button>
                </div>
            </form>
        </div>
    </main>
    
    <!-- footer -->
    <%- include("../partials/footer") %> 
    <!-- fin del footer -->
    <%- include("../partials/scripts") %>
    
</body>
</html>